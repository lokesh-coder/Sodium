<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
        >
    <testsuites>
        <testsuite name="Sodium Color Library">
            <directory>./tests/Sodium</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Sodium</directory>
            <exclude>
                <directory>./tests/Fixtures</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
      <!-- <log type="coverage-html" target="../code-coverage-report" lowUpperBound="35" highLowerBound="70"/> -->
    </logging>
</phpunit>